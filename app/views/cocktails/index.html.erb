<div class="container">
  <h1>Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card" style="background-image: url('https://source.unsplash.com/600x600/?cocktail, beverages, <%= cocktail.name %>')">
        <h4><%= cocktail.name %></h4>
      <% end %>
      </div>
    </div>
      <% end %>
  </div>
  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
